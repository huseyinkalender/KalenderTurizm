@using KalenderTurizm.Entities.Dtos;

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model PlaceToVisitDto

<form asp-action="Update" asp-controller="PlaceToVisit" method="post">

    <label>Category Id:</label>
    <input type="text" placeholder="Category Id" asp-for="CategoryId" value="@Model.CategoryId" /> <br />
    <label>Tour Id:</label>
    <input type="text" placeholder="Tour Id" asp-for="TourId" value="@Model.TourId" /> <br />
    <label>Place To Visit Name:</label>
    <input type="text" placeholder="Place To Visit Name" asp-for="PlaceToVisitName" value="@Model.PlaceToVisitName" /> <br />
    <label>Price:</label>
    <input type="text" placeholder="Price" asp-for="Price" value="@Model.Price" /> <br />
    <label>Description:</label>
    <input type="text" placeholder="Description" asp-for="Description" value="@Model.Description" /> <br />
    <label>Type Of Transportation:</label>
    <input type="text" placeholder="Type Of Transportation" asp-for="TypeOfTransportation" value="@Model.TypeOfTransportation" /> <br />
    <label>Tour Duration:</label>
    <input type="text" placeholder="Tour Duration" asp-for="TourDuration" value="@Model.TourDuration" /> <br />
    <label>Starting Point:</label>
    <input type="text" placeholder="Starting Point" asp-for="StartingPoint" value="@Model.StartingPoint" /> <br />
    <label>Period:</label>
    <input type="text" placeholder="Period" asp-for="Period" value="@Model.Period" /> <br />
    <label>Image:</label>
    <input type="text" placeholder="Image" asp-for="Image" value="@Model.Image" /> <br />
   
    <input type="submit" value="Update" />

</form>

