@using KalenderTurizm.Entities.Dtos;

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TourDto

<form asp-action="Update" asp-controller="Tour" method="post">

    <label>Category Id:</label>
    <input type="text" placeholder="Category Id" asp-for="CategoryId" value="@Model.CategoryId" />
    <label>Tour Name</label>
    <input type="text" placeholder="Tour Name" asp-for="TourName" value="@Model.TourName" />
    <input type="submit" value="Update" />

</form>

