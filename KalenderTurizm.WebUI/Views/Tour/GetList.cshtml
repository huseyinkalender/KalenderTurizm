@using KalenderTurizm.Entities.Dtos;

@{
    ViewData["Title"] = "GetList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<TourDto>


<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link href="/css/category.css" rel="stylesheet" />
<!------ Include the above in your HEAD tag ---------->

<div class="container" action="Index">
    <div class="row col-md-6 col-md-offset-2 custyle">
        <table class="table table-striped custab">
            <thead>
                <a href="/Tour/Add" class="btn btn-primary btn-xs pull-right"><b>+</b> Add new tours</a>
                <tr>

                    <th>Tour Name</th>

                </tr>
            </thead>

            @foreach (TourDto tour in Model)
            {
                <tr>
                    <td>@tour.CategoryId</td>
                    <td>@tour.TourName</td>
                    <td class="text-center"><a class='btn btn-info btn-xs' href="/Tour/Update/@tour.Id"><span class="glyphicon glyphicon-edit"></span> Edit</a> <a href="/Tour/Delete/@tour.Id" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Del</a></td>
                </tr>
            }


        </table>
    </div>
</div>

